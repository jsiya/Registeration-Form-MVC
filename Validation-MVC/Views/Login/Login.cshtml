@model User

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<html lang="en">
<head>
    <title>Sign In</title>
</head>
<body>
<div class="d-flex flex-column align-items-center card p-md-2 m-xl-5">
    <h1>Sign Up</h1>
    <form method="post" asp-action="Login" asp-controller="Login" class="d-flex flex-column card-body">
        <div class="form-floating mb-3">
            <input asp-for="Username" type="text" class="form-control" id="username" placeholder="username">
            <label for="username">Username</label>
            <span asp-validation-for="Username"  style="color: red; font-size: 10px;"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
            <span asp-validation-for="Password"  style="color: red; font-size: 10px;"></span>
        </div>
        <button class="btn btn-danger m-5" type="submit"> Sign In</button>
    </form>
    <button onclick="location.href='@Url.Action("Login", "Login")'" class="btn btn-outline-danger">Back</button>
</div>
</body>
</html>